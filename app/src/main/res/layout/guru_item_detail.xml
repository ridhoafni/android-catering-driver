<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.activities.GuruDetailActivity"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/colorGrey"
    android:gravity="center"
    android:id="@+id/ll">

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:tools="http://schemas.android.com/tools">

            <TableLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"
                android:layout_gravity="center_horizontal"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <TableRow
                    android:paddingBottom="8dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text="Nama Member"
                        android:textColor="@android:color/black"/>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text=":"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/tv_nama_member"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text=""
                        android:textColor="@android:color/black"/>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>


                <TableRow
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/tv_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text="Nama Paket"
                        android:textColor="@android:color/black"/>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text=":"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/tv_nama_paket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text=""
                        android:textColor="@android:color/black"/>
                </TableRow>

                <TableRow
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/tv_alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text="Alamat Lengkap"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text=":"
                        android:textColor="@android:color/darker_gray"/>

                    <TextView
                        android:id="@+id/tv_alamatisi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text=""
                        android:textColor="@android:color/darker_gray"/>
                </TableRow>

                <TableRow
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/tv_jumlah_pesanan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text="Jumlah Pesanan"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text=":"
                        android:textColor="@android:color/darker_gray"/>

                    <TextView
                        android:id="@+id/tv_jumlah_pesanan_isi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text=""
                        android:textColor="@android:color/darker_gray"/>
                </TableRow>

                <TableRow
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text="Total"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text=":"
                        android:textColor="@android:color/darker_gray"/>

                    <TextView
                        android:id="@+id/tv_total_isi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text=""
                        android:textColor="@android:color/darker_gray"/>
                </TableRow>



            </TableLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>







    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:tools="http://schemas.android.com/tools">

            <TableLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"
                android:layout_gravity="center_horizontal"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <TableRow
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/tv_tgl_pesan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text="Tanggal Pesanan"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text=":"
                        android:textColor="@android:color/darker_gray"/>

                    <TextView
                        android:id="@+id/tv_tgl_pesan_isi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text=""
                        android:textColor="@android:color/darker_gray"/>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>

                <TableRow
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/tv_pesan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text="Pesan Tambahan"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text=":"
                        android:textColor="@android:color/darker_gray"/>

                    <TextView
                        android:id="@+id/tv_pesan_isi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text=""
                        android:textColor="@android:color/darker_gray"/>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>

                <TableRow
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text="Status"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text=":"
                        android:textColor="@android:color/darker_gray"/>

                    <TextView
                        android:id="@+id/tv_status_isi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:text=""
                        android:textColor="@android:color/darker_gray"/>
                </TableRow>

            </TableLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>



    </LinearLayout>
